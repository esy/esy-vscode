{
    "name": "esy-vscode",
    "displayName": "Esy",
    "description": "Esy Projects support for VSCode",
    "version": "0.0.1",
    "publisher": "giltho",
    "engines": {
        "vscode": "^1.0.0"
    },
    "categories": [
        "Other"
    ],
    "contributes": {
        "jsonValidation": [
            {
                "fileMatch": "esy.json",
                "url": "./schemas/esy.schema.json"
            },
            {
                "fileMatch": "package.json",
                "url": "./schemas/esy.schema.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
